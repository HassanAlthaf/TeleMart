<hibernate-mapping>
    <class name="com.hassanalthaf.telemart.orders.Order" table="orders">
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="customerId" column="customer_id" type="int" />
        <property name="userId" column="user_id" type="int" />
        <property name="date" column="date" type="long" />
    </class>
</hibernate-mapping>