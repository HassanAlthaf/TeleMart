<hibernate-mapping>
    <class name="com.hassanalthaf.telemart.orders.OrderItem" table="order_items">
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="productId" column="product_id" type="int" />
        <property name="orderId" column="order_id" type="int" />
        <property name="quantity" column="quantity" type="int" />
        <property name="unitPrice" column="unit_price" type="double" />
    </class>
</hibernate-mapping>