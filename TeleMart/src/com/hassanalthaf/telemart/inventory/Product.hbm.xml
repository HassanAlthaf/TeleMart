<hibernate-mapping>
    <class name="com.hassanalthaf.telemart.inventory.Product" table="inventory">
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="brand" column="brand" type="string" />
        <property name="model" column="model" type="string" />
        <property name="colour" column="colour" type="string" />
        <property name="unitPrice" column="unit_price" type="double" />
        <property name="availableQuantity" column="available_quantity" type="int" />
        <property name="specifications" column="specifications" type="text" />
    </class>
</hibernate-mapping>