<hibernate-mapping>
    <class name="com.hassanalthaf.telemart.customers.Customer" table="customers">
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="nicNumber" column="nic_number" type="string" />
        <property name="membershipNumber" column="membership_number" type="int" />
        <property name="name" column="name" type="string" />
        <property name="contactNumber" column="contact_number" type="int" />
        <property name="address" column="address" type="string" />
        <property name="emailAddress" column="email_address" type="string" />
    </class>
</hibernate-mapping>